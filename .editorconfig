indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.cmake]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.py]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
